    <!-- Configure Modal -->
    <div class="modal fade" id="configure" tabindex="-1" role="dialog" aria-labelledby="configureLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="activeConfirmationLabel">Configuration</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1" style="text-align: center">
                            <h4>Configure <b><span id="configure-sourceName"></span></b> source</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <form class="form-horizontal" role="form">
                                <div class="form-group" style="margin-top: 10px">
                                    {{ form_label(form.topicId, null,
                                        {'label_attr': {'class': 'col-md-5 control-label'}}) }}
                                    <div class="col-md-5">
                                        {{ form_widget(form.topicId,
                                            {'attr': {'class': 'form-control input-sm'}}) }}
                                    </div>
                                </div>
                                <div class="form-group" style="margin-top: 10px">
                                    {{ form_label(form.price, null,
                                        {'label_attr': {'class': 'col-md-5 control-label'}}) }}
                                    <div class="col-md-5">
                                        {{ form_widget(form.price,
                                            {'attr': {'class': 'form-control input-sm'}}) }}
                                    </div>
                                </div>
                                {{ form_widget(form.sourceId) }}
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="margin-top: 0px">
                    <button id="modal-configure-yes" type="button" class="btn btn-primary">Yes</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>